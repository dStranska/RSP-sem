        <ul class="menu">
            <a class="{{ app.request.get('_route') == 'homepage' ? 'active' }}"
               href="/">
                <li>Moje články</li>
            </a>
            <a class="{{ app.request.get('_route') == 'add-article' ? 'active' }}" href="/add-article">
                <li>Přidat článek</li>
            </a>
            <a href="#">
                <li>Termíny</li>
            </a>
        </ul>
    {% elseif user.getRole() =='redaktor' %}
        <h2>Redaktor</h2>
        <ul class="menu">
            <a class="{{ app.request.get('_route') == 'homepage' ? 'active' }}"
               href="/">
                <li>Články</li>
            </a>
            <a class="{{ app.request.get('_route') == 'themes' ? 'active' }}"
               href="/themes">
                <li>Témata</li>
            </a>

        </ul>

    {% elseif user.getRole() =='recenzent' %}
        <h2>Rezenzent</h2>
        <ul class="menu">
            <a class="{{ app.request.get('_route') == 'homepage' ? 'active' }}"
               href="/">
                <li>Články</li>
            </a>


        </ul>
    {% endif %}
{% endif %}
